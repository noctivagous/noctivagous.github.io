{
  "type": "module",
  "name": "keypilot-extension",
  "version": "1.0.0",
  "description": "KeyPilot Chrome Extension",
  "scripts": {
    "build": "node build.js",
    "test": "jest",
    "test:toggle": "node tests/run-toggle-tests.cjs",
    "test:unit": "jest tests/extension-toggle-manager.test.js",
    "test:integration": "jest tests/toggle-integration.test.js",
    "test:edge-cases": "jest tests/cross-tab-edge-cases.test.js",
    "test:manual": "echo 'Please follow the manual test cases in tests/manual-test-cases.md'"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "background.js",
      "!src/content-script.js"
    ]
  }
}