{
  "manifest_version": 3,
  "name": "KeyPilot - Keyboard Navigation",
  "version": "1.0.0",
  "description": "Navigate websites using keyboard shortcuts with visual feedback and smart element interaction",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "windows",
    "scripting"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["content/keypilot-core.js", "content/content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "KeyPilot - Toggle keyboard navigation",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["content/*", "icons/*", "test-extension-context.html", "test-extension-context.js", "test-utils.js"],
      "matches": ["http://*/*", "https://*/*", "file://*/*", "chrome-extension://*/*"]
    }
  ]
}