{
  "type": "module",
  "name": "keypilot-extension",
  "version": "1.0.0",
  "description": "KeyPilot Chrome Extension",
  "scripts": {
    "build": "node build.js",
    "test": "jest",
    "test:toggle": "node tests/run-toggle-tests.cjs",
    "test:unit": "jest tests/extension-toggle-manager.test.js",
    "test:integration": "jest tests/toggle-integration.test.js",
    "test:edge-cases": "jest tests/cross-tab-edge-cases.test.js",
    "test:viewport-frame": "jest tests/viewport-modal-frame*.test.js",
    "test:viewport-unit": "jest tests/viewport-modal-frame.test.js",
    "test:viewport-integration": "jest tests/viewport-modal-frame-integration.test.js",
    "test:viewport-behavior": "jest tests/viewport-modal-frame-behavior.test.js",
    "test:viewport-responsive": "jest tests/viewport-modal-frame-responsive.test.js",
    "test:viewport-simple": "node tests/run-viewport-tests.mjs",
    "test:manual": "echo 'Please follow the manual test cases in tests/manual-test-cases.md'"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "background.js",
      "!src/content-script.js"
    ]
  }
}
